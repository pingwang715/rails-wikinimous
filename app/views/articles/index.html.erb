<div class="mx-2">
  <h1>Articles</h1>
</div>
<ul class="list-group list-group-flush">
   <% @articles.each do |article| %>
  <li class="list-group-item mx-2">
    <i class="fa-thin fa-book"></i><%= link_to article.title, article_path(article), class: 'text-decoration-none'%>
  </li>
    <% end %>
</ul>
