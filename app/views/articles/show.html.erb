<div class="mx-2">
  <h1><%=  @article.title %></h1>
  <p><%= @article.content %> </p>
</div>
<ul>
  <li><%= link_to "Edit this article", edit_article_path, class: 'text-decoration-none'%></li>
  <li><%= link_to "Delete this article", article_path(@article), data: { turbo_method: "delete", turbo_confirm: "Do you want to delete this article?" }, class: 'text-decoration-none'%></li>
  <li><%= link_to "Back to list", articles_path, class: 'text-decoration-none'%></li>
</ul>
